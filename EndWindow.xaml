<Window x:Class="EnglischQuiz.EndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnglischQuiz"
        mc:Ignorable="d"
                Title="MainWindow" Height="800" Width="1000" ResizeMode="NoResize">
    <Grid>
        <Image Source="/Bilder/EnglischBildEnde.PNG" Stretch="Fill"/>

        <StackPanel>
        <TextBlock Margin="320,300,20,0" Foreground="GhostWhite" FontStyle="Italic" FontSize="65">Highscore: <TextBlock x:Name="endHighscore" FontSize="65">0</TextBlock></TextBlock>
        <Button Content="Weiter" Click="WeiterButton_Click" FontStyle="Italic" FontSize="50" Margin="0,250,0,20" Width="230" Height="80" HorizontalAlignment="Center">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="GhostWhite"/>
                    <Setter Property="BorderBrush" Value="GhostWhite"/>
                    <Setter Property="BorderThickness" Value="5"/>
                </Style>
            </Button.Style>
        </Button>
    </StackPanel>
    </Grid>
</Window>
